    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "out",
    "declaration": true,
  },
  "exclude": [
    "sources/*",
    "out/*",
  ]
}
